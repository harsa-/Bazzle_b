<script type="text/javascript">
  function select_all() {
	var text=eval("document.post.message");
	text.focus();
	text.select();
  }
</script>

<%= form_tag '/posts', :name => "post", :method => :create, :remote => true do %>
  <%= text_area_tag(:message, "", :size => "44x6", :onClick => "select_all();") %><br />
  <%= hidden_field_tag :channel_id, @channel.id %>
  <%= hidden_field_tag :channel_name, @channel.name %>
  <%= submit_tag("Post") %>
<% end %>
