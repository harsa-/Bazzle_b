<!DOCTYPE html>
<html>
  <head>
    <title>Bazzle</title>
    <%= stylesheet_link_tag 'styles' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
	<%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
	
    <div id="container">
      <div id="left">
        <header>
          Bazzle
          <div id="logo"><%= image_tag("Bazzle.png") %></div>
        </header>
    
        <div id="content">
          <%= yield %>
        </div>

        <div id="footer" style="height:50px">
		
        </div>
      </div>

      <div id="right">
        <%= yield :right %>
	    </div>
    </div>
  </body>


</html>
